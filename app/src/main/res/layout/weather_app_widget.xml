<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/iv_widget_ico"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/weather_qing" />

    <TextView
        android:id="@+id/tv_widget_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/line_margin_top"
        android:layout_toEndOf="@id/iv_widget_ico"
        android:text="@string/default_data"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_widget_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_week"
        android:layout_margin="@dimen/line_margin_top"
        android:layout_toEndOf="@id/iv_widget_ico"
        android:text="@string/default_data"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_temperature"
        android:layout_margin="@dimen/line_margin_top"
        android:layout_toEndOf="@id/iv_widget_ico"
        android:text="@string/default_data"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_weather"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/line_margin_top"
        android:text="@string/default_data"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/ib_widget_update"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_widget_weather"
        android:layout_toEndOf="@id/tv_update_time"
        android:background="@android:color/transparent"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/update_selector" />

    <TextView
        android:id="@+id/tv_widget_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_update_time"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/line_margin_top"
        android:text="@string/default_data"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/ib_widget_location_update"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/ib_widget_update"
        android:layout_toEndOf="@id/tv_widget_location"
        android:background="@android:color/transparent"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/location_selector" />

</RelativeLayout>